<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_obe_course_form" model="ir.ui.view">
        <field name="name">obe.course.form</field>
        <field name="model">obe.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active" readonly="1"/>
                    <button name="action_active" string="Activate" type="object" 
                            class="oe_highlight" icon="fa-check" 
                            invisible="state != 'draft'" 
                            confirm="Are you sure you want to activate this course?"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            class="btn-secondary" icon="fa-undo" 
                            invisible="state != 'active'"
                            confirm="Are you sure you want to reset this course to draft?"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_offerings"
                                string="Offerings"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-book">
                            <field name="offering_count" widget="statinfo" string="Offerings"/>
                        </button>
                        <button name="action_view_prerequisites"
                                string="Prerequisites"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-sitemap">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Prerequisites</span>
                            </div>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., Introduction to Programming" 
                                   required="1" class="text-break"/>
                        </h1>
                        <div class="d-flex align-items-center gap-2">
                            <label for="code" class="oe_edit_only"/>
                            <field name="code" placeholder="e.g., CS101" 
                                   class="oe_inline" required="1"/>
                            <span class="mx-2">|</span>
                            <label for="active" string="Active" class="me-1"/>
                            <field name="active" widget="boolean_toggle" nolabel="1"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Course Information">
                            <field name="program_ids" widget="many2many_tags" placeholder="Select Program"/>
                            <field name="course_type"/>
                            <field name="semester" placeholder="Select Semester"/>
                            <field name="coordinator_id"/>
                        </group>

                        <group string="Credit Distribution">
                            <field name="credit_hours"/>
                            <field name="theory_hours"/>
                            <field name="lab_hours"/>
                            <field name="program_count" string="Programs" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Prerequisites" name="prerequisites">
                            <group>
                                <group string="Course Prerequisites">
                                    <field name="prerequisite_ids"
                                           widget="many2many_tags"
                                           nolabel="1"/>
                                </group>

                                <group string="Dependent Courses">
                                    <field name="dependent_course_ids"
                                           readonly="1"
                                           widget="many2many_tags"
                                           nolabel="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Course Content" name="content">
                            <group>
                                <group string="General Description" colspan="2">
                                    <field name="description" 
                                           widget="text"
                                           placeholder="Enter course description..."
                                           nolabel="1"/>
                                </group>
                            </group>
                            
                            <group>
                                <group string="Learning Objectives" colspan="2">
                                    <field name="learning_objectives" 
                                           widget="text"
                                           placeholder="Enter learning objectives..."
                                           nolabel="1"/>
                                </group>
                            </group>

                            <group>
                                <group string="Syllabus Details" colspan="2">
                                    <field name="syllabus"
                                           widget="html"
                                           placeholder="Write detailed syllabus here..."
                                           options="{'style-inline': true, 'codeview': true, 'collaborative': true}"
                                           nolabel="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Course Offerings" name="offerings">
                            <field name="offering_ids">
                                <list string="Offerings">
                                    <field name="name"/>
                                    <field name="academic_year"/>
                                    <field name="semester" placeholder="Select Semester"/>
                                    <field name="instructor_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Course Learning Outcomes">
                            <field name="clo_ids"
                                context="{'default_course_id': active_id}">
                                <list string="CLOs">
                                    <!-- <field name="sequence"/> -->
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="bloom_level"/>
                                    <!-- <field name="state"/> -->
                                </list>
                            </field>
                        </page>
                    </notebook>
                    
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_obe_course_tree" model="ir.ui.view">
        <field name="name">obe.course.list</field>
        <field name="model">obe.course</field>
        <field name="arch" type="xml">
            <list string="Courses" 
                  default_order="code"
                  sample="1"
                  multi_edit="1">
                <header>
                    <button name="action_active" string="Activate" type="object" 
                            icon="fa-check"/>
                </header>
                <field name="code" string="Course Code" required="1"/>
                <field name="name" string="Course Name" required="1"/>
                <field name="course_type" string="Type" optional="show"/>
                <field name="credit_hours" string="Credits" optional="show"/>
                <field name="semester" string="Semester" optional="hide"/>
                <field name="coordinator_id" string="Coordinator" optional="hide"/>
                <field name="program_count" string="Programs" widget="statinfo" optional="hide"/>
                <field name="offering_count" string="Offerings" widget="statinfo" optional="hide"/>
                <field name="state" string="Status" 
                       widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-info="state == 'draft'"
                       optional="show"/>
                <field name="active" string="Active" 
                       widget="boolean_toggle" 
                       optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_obe_course_search" model="ir.ui.view">
        <field name="name">obe.course.search</field>
        <field name="model">obe.course</field>
        <field name="arch" type="xml">
            <search string="Search Courses">
                <field name="name" string="Course" 
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="course_type"/>
                <field name="coordinator_id"/>
                <field name="program_ids"/>
                
                <separator/>

                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Active Status" name="active_state" 
                        domain="[('state', '=', 'active')]"/>
                
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Course Type" name="group_type" 
                            context="{'group_by': 'course_type'}"/>
                    <filter string="Semester" name="group_semester" 
                            context="{'group_by': 'semester'}"/>
                    <filter string="Coordinator" name="group_coordinator" 
                            context="{'group_by': 'coordinator_id'}"/>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Active Status" name="group_active" 
                            context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_obe_course_kanban" model="ir.ui.view">
        <field name="name">obe.course.kanban</field>
        <field name="model">obe.course</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="course_type"/>
                <field name="credit_hours"/>
                <field name="coordinator_id"/>
                <field name="state"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-10">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="code"/>
                                    </div>
                                </div>
                                <div class="col-2 text-end">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'info', 'active': 'success'}}"/>
                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <i class="fa fa-tag"/> 
                                <field name="course_type" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-clock-o"/> 
                                <field name="credit_hours" class="text-muted"/> Credits
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-user"/> 
                                <field name="coordinator_id" class="text-muted"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_obe_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">obe.course</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_obe_course_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Course
            </p>
            <p>
                Courses are the building blocks of your academic programs.
                Click the create button to add a new course.
            </p>
        </field>
    </record>

    <menuitem id="menu_obe_academic"
              name="Academic Structure"
              parent="menu_obe_root"
              sequence="10"/>

    <menuitem id="menu_obe_courses"
              name="Courses"
              parent="menu_obe_configuration"
              action="action_obe_course"
              sequence="80"/>

</odoo>