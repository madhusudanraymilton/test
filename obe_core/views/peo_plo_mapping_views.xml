<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_obe_plo_peo_mapping_form" model="ir.ui.view">
        <field name="name">obe.plo.peo.mapping.form</field>
        <field name="model">obe.plo.peo.mapping</field>
        <field name="arch" type="xml">
            <form string="PLO-PEO Mapping">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>

                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="peo_id" />
                        <h1>
                            <field name="peo_id" placeholder="Select Program Educational Objective" class="text-break" options="{'no_create': True}"/>
                        </h1>
                        <div class="d-flex align-items-center gap-2">
                            <label for="active" string="Active" class="me-1"/>
                            <field name="active" widget="boolean_toggle" nolabel="1"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="plo_ids" widget="many2many_tags"/>
                        </group>
                        
                        <group string="Mapping Information">
                            <field name="strength" required="1"/>
                            <field name="strength_value" readonly="1"/> 
                        </group>
                    </group>
                    
                    <group>
                        <group string="Supporting Rationale" colspan="2">
                            <field name="rationale" 
                                   widget="text"
                                   placeholder="Explain how this PLO contributes to the PEO..."
                                   nolabel="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_obe_plo_peo_mapping_list" model="ir.ui.view">
        <field name="name">obe.plo.peo.mapping.list</field>
        <field name="model">obe.plo.peo.mapping</field>
        <field name="arch" type="xml">
            <list string="PLO-PEO Mappings" 
                  decoration-muted="not active"
                  sample="1"
                  multi_edit="1">
                <field name="plo_id" string="PLO"/>
                <field name="peo_id" string="PEO"/>
                <field name="program_id" string="Program"/>
                <field name="strength" string="Strength" optional="show"/>
                <field name="strength_value" string="Strength Value" optional="hide"/>
                <field name="active" string="Active" 
                       widget="boolean_toggle" 
                       optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_obe_plo_peo_mapping_search" model="ir.ui.view">
        <field name="name">obe.plo.peo.mapping.search</field>
        <field name="model">obe.plo.peo.mapping</field>
        <field name="arch" type="xml">
            <search string="Search PLO-PEO Mappings">
                <field name="plo_id" string="PLO"/>
                <field name="peo_id" string="PEO"/>
                <field name="program_id"/>
                
                <separator/>

                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="High Strength" name="high_strength" 
                        domain="[('strength', '=', '3')]"/>
                <filter string="Medium Strength" name="medium_strength" 
                        domain="[('strength', '=', '2')]"/>
                <filter string="Low Strength" name="low_strength" 
                        domain="[('strength', '=', '1')]"/>
                
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="PLO" name="group_plo" 
                            context="{'group_by': 'plo_id'}"/>
                    <filter string="PEO" name="group_peo" 
                            context="{'group_by': 'peo_id'}"/>
                    <filter string="Program" name="group_program" 
                            context="{'group_by': 'program_id'}"/>
                    <filter string="Strength" name="group_strength" 
                            context="{'group_by': 'strength'}"/>
                    <filter string="Active Status" name="group_active" 
                            context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_obe_plo_peo_mapping_kanban" model="ir.ui.view">
        <field name="name">obe.plo.peo.mapping.kanban</field>
        <field name="model">obe.plo.peo.mapping</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="plo_id"/>
                <field name="peo_id"/>
                <field name="program_id"/>
                <field name="strength"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <strong class="o_kanban_record_title">
                                        <field name="plo_id"/> â†’ <field name="peo_id"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="program_id"/>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <i class="fa fa-signal" title="Strength"/> 
                                <span class="text-muted">Strength: <field name="strength"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_obe_plo_peo_mapping" model="ir.actions.act_window">
        <field name="name">PLO-PEO Mapping</field>
        <field name="res_model">obe.plo.peo.mapping</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_obe_plo_peo_mapping_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first PLO-PEO Mapping
            </p>
            <p>
                Map Program Learning Outcomes to Program Educational Objectives to ensure alignment.
                Click the create button to add a new mapping.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_obe_plo_peo_mapping"
        name="PLO-PEO Mapping"
        parent="menu_obe_root"
        action="action_obe_plo_peo_mapping"
        sequence="95"
    />

    <!-- Wizard Views -->
    <record id="view_obe_plo_peo_mapping_wizard_form" model="ir.ui.view">
        <field name="name">obe.plo.peo.mapping.wizard.form</field>
        <field name="model">obe.plo.peo.mapping.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk PLO-PEO Mapping">
                <sheet>
                    <group>
                        <group string="Program Learning Outcome">
                            <field name="plo_id" required="1"/>
                            <field name="program_id" readonly="1"/>
                        </group>
                        
                        <group string="Mapping Configuration">
                            <field name="default_strength" required="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Program Educational Objectives" colspan="2">
                            <field name="peo_ids" widget="many2many_tags" nolabel="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Rationale" colspan="2">
                            <field name="rationale" 
                                   widget="text"
                                   placeholder="Enter common rationale for all mappings..."
                                   nolabel="1"/>
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button string="Create Mappings"
                            type="object"
                            name="action_create_mappings"
                            class="btn-primary"/>

                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_obe_plo_peo_mapping_wizard" model="ir.actions.act_window">
        <field name="name">Bulk PLO-PEO Mapping</field>
        <field name="res_model">obe.plo.peo.mapping.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>