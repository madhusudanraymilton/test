<!-- <?xml version="1.0" encoding="utf-8"?> -->
<odoo>

    <!-- PLO-PEO Mapping Form View -->
    <record id="view_obe_plo_peo_mapping_form" model="ir.ui.view">
        <field name="name">obe.plo.peo.mapping.form</field>
        <field name="model">obe.plo.peo.mapping</field>
        <field name="arch" type="xml">
            <form string="PLO-PEO Mapping">
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            class="oe_highlight" icon="fa-check" 
                            invisible="state != 'draft'" 
                            confirm="Are you sure you want to activate this mapping?"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            class="btn-secondary" icon="fa-undo" 
                            invisible="state == 'draft'"
                            confirm="Are you sure you want to reset this mapping to draft?"/>
                    <button name="action_archive_mapping" string="Archive" type="object" 
                            class="btn-warning" icon="fa-archive" 
                            invisible="state == 'archived'"
                            confirm="Are you sure you want to archive this mapping?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                </header>
                
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" icon="fa-link">
                            <field name="plo_count" widget="statinfo" string="PLOs"/>
                        </button>
                    </div> -->
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="peo_id"/>
                        <h1>
                            <field name="peo_id" placeholder="Select Program Educational Objective" 
                                   required="1" class="text-break" 
                                   options="{'no_create': True}"/>
                        </h1>
                        <div class="d-flex align-items-center gap-2 mt-2">
                            <label for="active" string="Active" class="me-1"/>
                            <field name="active" widget="boolean_toggle" nolabel="1"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Program Information">
                            <field name="program_id" readonly="1"/>
                            <field name="institution_id" readonly="1"/>
                            <field name="sequence"/>
                        </group>
                        
                        <group string="Mapping Strength">
                            <field name="strength" required="1" widget="radio"/>
                            <field name="strength_value" readonly="1" 
                                   widget="progressbar" 
                                   options="{'style': 'width: 50%; max_value: 3'}"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Program Learning Outcomes" colspan="2">
                            <field name="plo_ids" 
                                   widget="many2many_tags" 
                                   nolabel="1"
                                   placeholder="Select PLOs that contribute to this PEO..."
                                   options="{'color_field': 'state', 'no_create': True}"
                                   domain="[('program_id', '=', program_id)]"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Supporting Rationale" colspan="2">
                            <field name="rationale" 
                                   widget="text"
                                   placeholder="Explain how these PLOs contribute to achieving the PEO...
Example: These PLOs directly support PEO by ensuring graduates can apply engineering principles to solve real-world problems."
                                   nolabel="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Evidence Reference">
                            <field name="evidence_reference" 
                                   placeholder="e.g., Curriculum Map Section 3.2, Assessment Report 2024"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Audit Information" colspan="2">
                            <group>
                                <field name="created_by" readonly="1"/>
                                <field name="created_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="last_updated_by" readonly="1"/>
                                <field name="last_updated_date" readonly="1"/>
                            </group>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- PLO-PEO Mapping Tree View -->
    <record id="view_obe_plo_peo_mapping_tree" model="ir.ui.view">
        <field name="name">obe.plo.peo.mapping.tree</field>
        <field name="model">obe.plo.peo.mapping</field>
        <field name="arch" type="xml">
            <list string="PLO-PEO Mappings" 
                  decoration-muted="not active"
                  decoration-info="state == 'draft'"
                  decoration-success="state == 'active'"
                  sample="1"
                  multi_edit="1">
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            icon="fa-check"/>
                </header>
                <field name="sequence" widget="handle"/>
                <field name="peo_id" string="PEO"/>
                <field name="plo_ids" widget="many2many_tags" 
                       options="{'color_field': 'state'}"/>
                <field name="plo_count" string="PLO Count" optional="show"/>
                <field name="program_id" string="Program" optional="show"/>
                <field name="institution_id" string="Institution" optional="hide"/>
                <field name="strength" string="Strength" optional="show"/>
                <field name="strength_value" string="Strength Value" optional="hide" 
                       widget="progressbar" 
                       options="{'style': 'width: 100px; max_value: 3'}"/>
                <field name="state" string="Status" 
                       widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-info="state == 'draft'"
                       decoration-muted="state == 'archived'"
                       optional="show"/>
                <field name="active" string="Active" 
                       widget="boolean_toggle" 
                       optional="show"/>
            </list>
        </field>
    </record>

    <!-- PLO-PEO Mapping Search View -->
    <record id="view_obe_plo_peo_mapping_search" model="ir.ui.view">
        <field name="name">obe.plo.peo.mapping.search</field>
        <field name="model">obe.plo.peo.mapping</field>
        <field name="arch" type="xml">
            <search string="Search PLO-PEO Mappings">
                <field name="plo_ids" string="PLOs"/>
                <field name="peo_id" string="PEO"/>
                <field name="program_id"/>
                <field name="institution_id"/>
                
                <separator/>

                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Active Status" name="active_state" 
                        domain="[('state', '=', 'active')]"/>
                <filter string="Archived Status" name="archived_state" 
                        domain="[('state', '=', 'archived')]"/>
                
                <separator/>
                
                <filter string="High Strength (3)" name="high_strength" 
                        domain="[('strength', '=', '3')]"/>
                <filter string="Medium Strength (2)" name="medium_strength" 
                        domain="[('strength', '=', '2')]"/>
                <filter string="Low Strength (1)" name="low_strength" 
                        domain="[('strength', '=', '1')]"/>
                
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="PEO" name="group_peo" 
                            context="{'group_by': 'peo_id'}"/>
                    <filter string="Program" name="group_program" 
                            context="{'group_by': 'program_id'}"/>
                    <filter string="Institution" name="group_institution" 
                            context="{'group_by': 'institution_id'}"/>
                    <filter string="Strength" name="group_strength" 
                            context="{'group_by': 'strength'}"/>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="PLO Count" name="group_plo_count" 
                            context="{'group_by': 'plo_count'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- PLO-PEO Mapping Kanban View -->
    <record id="view_obe_plo_peo_mapping_kanban" model="ir.ui.view">
        <field name="name">obe.plo.peo.mapping.kanban</field>
        <field name="model">obe.plo.peo.mapping</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" default_group_by="peo_id">
                <field name="id"/>
                <field name="plo_ids"/>
                <field name="plo_count"/>
                <field name="peo_id"/>
                <field name="program_id"/>
                <field name="strength"/>
                <field name="strength_value"/>
                <field name="state"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-10">
                                    <strong class="o_kanban_record_title">
                                        <field name="peo_id"/>
                                    </strong>
                                    <div class="text-muted mt-1">
                                        <i class="fa fa-link"/> 
                                        <field name="plo_count"/> PLO(s)
                                    </div>
                                </div>
                                <div class="col-2 text-end">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'info', 'active': 'success', 'archived': 'secondary'}}"/>
                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <field name="plo_ids" widget="many2many_tags" 
                                       options="{'color_field': 'state'}"/>
                            </div>
                            
                            <div class="mt-2">
                                <i class="fa fa-graduation-cap"/> 
                                <field name="program_id" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-signal"/> 
                                <span class="text-muted">Strength: </span>
                                <field name="strength" widget="badge"/>
                                <div class="progress mt-1" style="height: 6px;">
                                    <div class="progress-bar" 
                                         role="progressbar" 
                                         t-att-style="'width: ' + (record.strength_value.raw_value / 3 * 100) + '%'"
                                         t-att-aria-valuenow="record.strength_value.raw_value"
                                         aria-valuemin="0" 
                                         aria-valuemax="3"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- PLO-PEO Mapping Action -->
    <record id="action_obe_plo_peo_mapping" model="ir.actions.act_window">
        <field name="name">PLO-PEO Mappings</field>
        <field name="res_model">obe.plo.peo.mapping</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_obe_plo_peo_mapping_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first PLO-PEO Mapping
            </p>
            <p>
                Map Program Learning Outcomes (PLOs) to Program Educational Objectives (PEOs) to ensure alignment.
                Each mapping can include multiple PLOs with the same strength level.
            </p>
            <p>
                <strong>Relationship:</strong> One PEO has Many Mapping records, each mapping can have Multiple PLOs
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem
        id="menu_obe_plo_peo_mapping"
        name="PLO-PEO Mapping"
        parent="menu_obe_mapping"
        action="action_obe_plo_peo_mapping"
        sequence="2"
    />

    <!-- ============================================ -->
    <!-- WIZARD VIEWS FOR BULK MAPPING -->
    <!-- ============================================ -->

    <record id="view_obe_plo_peo_mapping_wizard_form" model="ir.ui.view">
        <field name="name">obe.plo.peo.mapping.wizard.form</field>
        <field name="model">obe.plo.peo.mapping.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk PLO-PEO Mapping">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading">Bulk Mapping Wizard</h4>
                        <p>This wizard allows you to map multiple PLOs to a single PEO.</p>
                        <p class="mb-0">
                            <strong>Options:</strong><br/>
                            • Create one mapping record with all PLOs<br/>
                            • Create separate mapping records for each PLO
                        </p>
                    </div>
                    
                    <group>
                        <group string="Program Educational Objective">
                            <field name="peo_id" required="1" 
                                   options="{'no_create': True}"/>
                            <field name="program_id" readonly="1"/>
                        </group>
                        
                        <group string="Mapping Configuration">
                            <field name="default_strength" required="1" widget="radio"/>
                            <field name="create_single_mapping"/>
                            <field name="replace_existing" 
                                   help="If checked, existing mappings for selected PLOs will be deleted"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Program Learning Outcomes to Map" colspan="2">
                            <field name="plo_ids" 
                                   widget="many2many_tags" 
                                   nolabel="1"
                                   placeholder="Select PLOs to map to this PEO..."
                                   options="{'color_field': 'state', 'no_create': True}"
                                   domain="[('program_id', '=', program_id)]"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Common Rationale (Optional)" colspan="2">
                            <field name="rationale" 
                                   widget="text"
                                   placeholder="Enter common rationale for the mapping (can be customized later)..."
                                   nolabel="1"/>
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button string="Create Mapping(s)"
                            type="object"
                            name="action_create_mappings"
                            class="btn-primary"
                            icon="fa-link"/>

                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_obe_plo_peo_mapping_wizard" model="ir.actions.act_window">
        <field name="name">Bulk PLO-PEO Mapping</field>
        <field name="res_model">obe.plo.peo.mapping.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>