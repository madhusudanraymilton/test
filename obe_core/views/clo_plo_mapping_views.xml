<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_obe_clo_plo_mapping_form" model="ir.ui.view">
        <field name="name">obe.clo.plo.mapping.form</field>
        <field name="model">obe.clo.plo.mapping</field>
        <field name="arch" type="xml">
            <form string="CLO-PLO Mapping">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm" readonly="1"/>
                    <button name="action_confirm" string="Confirm" type="object" 
                            class="oe_highlight" icon="fa-check" 
                            invisible="state != 'draft'" 
                            confirm="Are you sure you want to confirm this mapping?"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            class="btn-secondary" icon="fa-undo" 
                            invisible="state != 'confirm'"
                            confirm="Are you sure you want to reset this mapping to draft?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="plo_id"/>
                        <h1>
                            <field name="plo_id" placeholder="Select Programming Learning Outcome" 
                                   required="1" class="text-break"/>
                        </h1>
                        <div class="d-flex align-items-center gap-2">
                            <label for="active" string="Active" class="me-1"/>
                            <field name="active" widget="boolean_toggle" nolabel="1"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="course_id" readonly="False"/>
                            <field name="offering_id" readonly="False" domain="[('course_id', '=', course_id)]"/>
                            <field name="clo_id" required="1" domain="[('course_id', '=', course_id)]"/>
                        </group>
                        
                        <group string="Mapping Information">
                            <field name="plo_id" required="1"/>
                            <field name="strength" required="1"/>
                            <field name="strength_value" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_obe_clo_plo_mapping_tree" model="ir.ui.view">
        <field name="name">obe.clo.plo.mapping.tree</field>
        <field name="model">obe.clo.plo.mapping</field>
        <field name="arch" type="xml">
            <list string="CLO-PLO Mappings" 
                  decoration-muted="not active"
                  sample="1"
                  multi_edit="1">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            icon="fa-check"/>
                </header>
                <field name="clo_id" string="CLO"/>
                <field name="course_id" string="Course"/>
                <field name="plo_id" string="PLO"/>
                <field name="program_id" string="Program"/>
                <field name="strength" string="Strength" optional="show"/>
                <field name="strength_value" string="Strength Value" optional="hide"/>
                <field name="state" string="Status" 
                       widget="badge" 
                       decoration-success="state == 'confirm'"
                       decoration-info="state == 'draft'"
                       optional="show"/>
                <field name="active" string="Active" 
                       widget="boolean_toggle" 
                       optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_obe_clo_plo_mapping_search" model="ir.ui.view">
        <field name="name">obe.clo.plo.mapping.search</field>
        <field name="model">obe.clo.plo.mapping</field>
        <field name="arch" type="xml">
            <search string="Search CLO-PLO Mappings">
                <field name="clo_id" string="CLO"/>
                <field name="plo_id" string="PLO"/>
                <field name="course_id"/>
                <field name="program_id"/>
                
                <separator/>

                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" 
                        domain="[('state', '=', 'confirm')]"/>
                
                <separator/>
                
                <filter string="High Strength" name="high_strength" 
                        domain="[('strength', '=', 'high')]"/>
                <filter string="Medium Strength" name="medium_strength" 
                        domain="[('strength', '=', 'medium')]"/>
                <filter string="Low Strength" name="low_strength" 
                        domain="[('strength', '=', 'low')]"/>
                
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="CLO" name="group_clo" 
                            context="{'group_by': 'clo_id'}"/>
                    <filter string="PLO" name="group_plo" 
                            context="{'group_by': 'plo_id'}"/>
                    <filter string="Course" name="group_course" 
                            context="{'group_by': 'course_id'}"/>
                    <filter string="Program" name="group_program" 
                            context="{'group_by': 'program_id'}"/>
                    <filter string="Strength" name="group_strength" 
                            context="{'group_by': 'strength'}"/>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Active Status" name="group_active" 
                            context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_obe_clo_plo_mapping_kanban" model="ir.ui.view">
        <field name="name">obe.clo.plo.mapping.kanban</field>
        <field name="model">obe.clo.plo.mapping</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="clo_id"/>
                <field name="plo_id"/>
                <field name="course_id"/>
                <field name="program_id"/>
                <field name="strength"/>
                <field name="state"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-10">
                                    <strong class="o_kanban_record_title">
                                        <field name="clo_id"/> → <field name="plo_id"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="program_id"/>
                                    </div>
                                </div>
                                <div class="col-2 text-end">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'info', 'confirm': 'success'}}"/>
                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <i class="fa fa-book"/> 
                                <field name="course_id" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-signal"/> 
                                <span class="text-muted">Strength: <field name="strength"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_obe_clo_plo_mapping" model="ir.actions.act_window">
        <field name="name">CLO-PLO Mapping</field>
        <field name="res_model">obe.clo.plo.mapping</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_obe_clo_plo_mapping_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first CLO-PLO Mapping
            </p>
            <p>
                Map Course Learning Outcomes to Program Learning Outcomes to ensure alignment.
                Click the create button to add a new mapping.
            </p>
        </field>
    </record>

    

   
    <record id="view_obe_clo_plo_mapping_wizard_form" model="ir.ui.view">
        <field name="name">obe.clo.plo.mapping.wizard.form</field>
        <field name="model">obe.clo.plo.mapping.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk CLO-PLO Mapping">
                <sheet>
                    <group>
                        <group string="Course Learning Outcome">
                            <field name="clo_id" required="1"/>
                            <field name="course_id" readonly="1"/>
                        </group>
                        
                        <group string="Mapping Configuration">
                            <field name="default_strength" required="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Program Learning Outcomes" colspan="2">
                            <field name="plo_ids" widget="many2many_tags" nolabel="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Justification" colspan="2">
                            <field name="justification" 
                                   widget="text"
                                   placeholder="Enter justification for this mapping..."
                                   nolabel="1"/>
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button string="Create Mappings"
                            type="object"
                            name="action_create_mappings"
                            class="btn-primary"/>

                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_obe_clo_plo_mapping_wizard" model="ir.actions.act_window">
        <field name="name">Bulk CLO-PLO Mapping</field>
        <field name="res_model">obe.clo.plo.mapping.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_obe_mapping"
        name="Mappings"
        parent="menu_obe_root"
        sequence="90"
    />

    <menuitem
        id="menu_obe_clo_plo_mapping"
        name="CLO-PLO Mapping"
        parent="menu_obe_mapping"
        action="action_obe_clo_plo_mapping"
        sequence="1"
    />

</odoo>
