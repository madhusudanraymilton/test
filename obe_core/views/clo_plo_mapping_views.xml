    ============================================
    WIZARD VIEWS FOR BULK MAPPING
    ============================================

    <record id="view_obe_clo_plo_mapping_wizard_form" model="ir.ui.view">
        <field name="name">obe.clo.plo.mapping.wizard.form</field>
        <field name="model">obe.clo.plo.mapping.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk CLO-PLO Mapping">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading">Bulk Mapping Wizard</h4>
                        <p>This wizard allows you to map a single CLO to multiple PLOs.</p>
                        <p class="mb-0">
                            <strong>Options:</strong><br/>
                            • Create one mapping record with all PLOs<br/>
                            • Create separate mapping records for each PLO
                        </p>
                    </div>
                    
                    <group>
                        <group string="Course Learning Outcome">
                            <field name="clo_id" required="1" 
                                   options="{'no_create': True}"/>
                            <field name="course_id" readonly="1"/>
                        </group>
                        
                        <group string="Mapping Configuration">
                            <field name="default_strength" required="1" widget="radio"/>
                            <field name="create_single_mapping"/>
                            <field name="replace_existing" 
                                   help="If checked, existing mappings for this CLO will be deleted"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Filter by Program (Optional)">
                            <field name="program_id" 
                                   placeholder="Select a program to filter PLOs..."
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Program Learning Outcomes to Map" colspan="2">
                            <field name="plo_ids" 
                                   widget="many2many_tags" 
                                   nolabel="1"
                                   placeholder="Select PLOs to map to this CLO..."
                                   options="{'color_field': 'state', 'no_create': True}"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Common Justification (Optional)" colspan="2">
                            <field name="justification" 
                                   widget="text"
                                   placeholder="Enter common justification for the mapping (can be customized later)..."
                                   nolabel="1"/>
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button string="Create Mapping(s)"
                            type="object"
                            name="action_create_mappings"
                            class="btn-primary"
                            icon="fa-link"/>

                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_obe_clo_plo_mapping_wizard" model="ir.actions.act_window">
        <field name="name">Bulk CLO-PLO Mapping</field>
        <field name="res_model">obe.clo.plo.mapping.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    ============================================
    CLO-PLO MAPPING MATRIX VIEW
    ============================================

    <record id="view_obe_clo_plo_matrix_form" model="ir.ui.view">
        <field name="name">obe.clo.plo.matrix.form</field>
        <field name="model">obe.clo.plo.matrix</field>
        <field name="arch" type="xml">
            <form string="CLO-PLO Mapping Matrix">
                <sheet>
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading"><i class="fa fa-table"/> CLO-PLO Mapping Matrix</h4>
                        <p>Visualize the relationship between Course Learning Outcomes and Program Learning Outcomes.</p>
                        <p class="mb-0">This matrix helps you identify gaps and ensure comprehensive coverage.</p>
