                <field name="course_id" string="Course" optional="show"/>
                <field name="program_id" string="Program" optional="show"/>
                <field name="institution_id" string="Institution" optional="hide"/>
                <field name="strength" string="Strength" optional="show"/>
                <field name="strength_value" string="Strength Value" optional="hide" 
                       widget="progressbar" 
                       options="{'style': 'width: 100px; max_value: 3'}"/>
                <field name="state" string="Status" 
                       widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-info="state == 'draft'"
                       decoration-muted="state == 'archived'"
                       optional="show"/>
                <field name="active" string="Active" 
                       widget="boolean_toggle" 
                       optional="show"/>
            </list>
        </field>
    </record>

    CLO-PLO Mapping Search View
    <record id="view_obe_clo_plo_mapping_search" model="ir.ui.view">
        <field name="name">obe.clo.plo.mapping.search</field>
        <field name="model">obe.clo.plo.mapping</field>
        <field name="arch" type="xml">
            <search string="Search CLO-PLO Mappings">
                <field name="clo_id" string="CLO"/>
                <field name="plo_ids" string="PLOs"/>
                <field name="course_id"/>
                <field name="program_id"/>
                <field name="institution_id"/>
                
                <separator/>

                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Active Status" name="active_state" 
                        domain="[('state', '=', 'active')]"/>
                <filter string="Archived Status" name="archived_state" 
                        domain="[('state', '=', 'archived')]"/>
                
                <separator/>
                
                <filter string="High Strength (3)" name="high_strength" 
                        domain="[('strength', '=', '3')]"/>
                <filter string="Medium Strength (2)" name="medium_strength" 
                        domain="[('strength', '=', '2')]"/>
                <filter string="Low Strength (1)" name="low_strength" 
                        domain="[('strength', '=', '1')]"/>
                
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="CLO" name="group_clo" 
                            context="{'group_by': 'clo_id'}"/>
                    <filter string="Course" name="group_course" 
                            context="{'group_by': 'course_id'}"/>
                    <filter string="Program" name="group_program" 
                            context="{'group_by': 'program_id'}"/>
                    <filter string="Institution" name="group_institution" 
                            context="{'group_by': 'institution_id'}"/>
                    <filter string="Strength" name="group_strength" 
                            context="{'group_by': 'strength'}"/>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="PLO Count" name="group_plo_count" 
                            context="{'group_by': 'plo_count'}"/>
                </group>
            </search>
        </field>
    </record>

    CLO-PLO Mapping Kanban View
    <record id="view_obe_clo_plo_mapping_kanban" model="ir.ui.view">
        <field name="name">obe.clo.plo.mapping.kanban</field>
        <field name="model">obe.clo.plo.mapping</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" default_group_by="clo_id">
                <field name="id"/>
                <field name="clo_id"/>
                <field name="plo_ids"/>
                <field name="plo_count"/>
                <field name="course_id"/>
                <field name="strength"/>
                <field name="strength_value"/>
                <field name="state"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-10">
                                    <strong class="o_kanban_record_title">
                                        <field name="clo_id"/>
                                    </strong>
                                    <div class="text-muted mt-1">
                                        <i class="fa fa-link"/> 
                                        <field name="plo_count"/> PLO(s)
                                    </div>
                                </div>
                                <div class="col-2 text-end">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'info', 'active': 'success', 'archived': 'secondary'}}"/>
                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <field name="plo_ids" widget="many2many_tags" 
                                       options="{'color_field': 'state'}"/>
                            </div>
                            
                            <div class="mt-2">
                                <i class="fa fa-book"/> 
                                <field name="course_id" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-signal"/> 
                                <span class="text-muted">Strength: </span>
                                <field name="strength" widget="badge"/>
                                <div class="progress mt-1" style="height: 6px;">
                                    <div class="progress-bar" 
                                         role="progressbar" 
                                         t-att-style="'width: ' + (record.strength_value.raw_value / 3 * 100) + '%'"
                                         t-att-aria-valuenow="record.strength_value.raw_value"
                                         aria-valuemin="0" 
                                         aria-valuemax="3"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    CLO-PLO Mapping Action
    <record id="action_obe_clo_plo_mapping" model="ir.actions.act_window">
        <field name="name">CLO-PLO Mappings</field>
        <field name="res_model">obe.clo.plo.mapping</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_obe_clo_plo_mapping_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first CLO-PLO Mapping
            </p>
            <p>
                Map Course Learning Outcomes (CLOs) to Program Learning Outcomes (PLOs) to ensure alignment.
                Each mapping can include multiple PLOs with the same strength level.
            </p>
            <p>
                <strong>Relationship:</strong> One CLO has One Mapping record, each mapping can have Multiple PLOs
            </p>
        </field>
    </record>

    Menu Items
    <menuitem
        id="menu_obe_clo_plo_mapping"
        name="CLO-PLO Mappings"
