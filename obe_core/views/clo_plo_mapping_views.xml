    CLO-PLO Mapping Tree View
    <record id="view_obe_clo_plo_mapping_tree" model="ir.ui.view">
        <field name="name">obe.clo.plo.mapping.tree</field>
        <field name="model">obe.clo.plo.mapping</field>
        <field name="arch" type="xml">
            <list string="CLO-PLO Mappings" 
                  decoration-muted="not active"
                  decoration-info="state == 'draft'"
                  decoration-success="state == 'active'"
                  sample="1"
                  multi_edit="1">
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            icon="fa-check"/>
                </header>
                <field name="sequence" widget="handle"/>
