<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Institution Tree View -->
        <record id="view_obe_institution_tree" model="ir.ui.view">
            <field name="name">obe.core.institution.tree</field>
            <field name="model">obe.core.institution</field>
            <field name="arch" type="xml">
                <list string="Institutions">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="vision"/>
                    <field name="mission"/>
                    <field name="vision_effective_date"/>
                    <field name="mission_effective_date"/>
                    <field name="status"/>
                </list>
            </field>
        </record>
        
