<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_obe_institution_form" model="ir.ui.view">
        <field name="name">obe.institution.form</field>
        <field name="model">obe.institution</field>
        <field name="arch" type="xml">
            <form string="Institution">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm" readonly="1"/>
                    <button name="action_confirm" string="Confirm" type="object" 
                            class="oe_highlight" icon="fa-check" 
                            invisible="state != 'draft'" 
                            confirm="Are you sure you want to confirm this institution?"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            class="btn-secondary" icon="fa-undo" 
                            invisible="state != 'confirm'"
                            confirm="Are you sure you want to reset this institution to draft?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., University of Technology" 
                                   required="1" class="text-break"/>
                        </h1>
                        <div class="d-flex align-items-center gap-2">
                            <label for="code" class="oe_edit_only"/>
                            <field name="code" placeholder="e.g., UOTECH" 
                                   class="oe_inline" required="1"/>
                            <span class="mx-2">|</span>
                            <label for="active" string="Active" class="me-1"/>
                            <field name="active" widget="boolean_toggle" nolabel="1"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="address" placeholder="Street, City, State, ZIP Code" 
                                   widget="text"/>
                            <field name="phone" widget="phone" placeholder="+1 (555) 123-4567"/>
                            <field name="email" widget="email" placeholder="contact@institution.edu"/>
                            <field name="website" widget="url" placeholder="https://www.institution.edu"/>
                        </group>
                        
                        <group string="Administrative Details">
                            <field name="founded_date" string="Founded Date" 
                                   invisible="1"/>  
                            <field name="accreditation" string="Accreditation Status" 
                                   invisible="1"/>  
                            <field name="institution_type" string="Type" 
                                   invisible="1"/>  
                        </group>
                    </group>
                    <notebook>
                        <page string="Mission Statement" name="mission">
                            <field name="mission_ids">
                                <list string="Missions">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="description" widget="text" options="{'tooltip_field': 'description'}"/>
                                    <field name="active" widget="boolean_toggle" />
                                </list>
                                <form string="Mission">
                                    <sheet>
                                        <group>
                                            <field name="sequence"/>
                                            <field name="name"/>
                                            <field name="description"/>
                                            <field name="active" widget="boolean_toggle" />
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page string="Vision Statement" name="vision">
                            <field name="vision_ids">
                                <list string="Visions">
                                    <field name="name" width="100"/>
                                    <field name="description" widget="text" options="{'tooltip_field': 'description'}" width="100"/>
                                    <field name="active" width="100"/>
                                    <field name="sequence" width="100"/>
                                </list>
                                <form string="Vision">
                                    <sheet>
                                        <group>
                                            <field name="name" width="100"/>
                                            <field name="description" width="100"/>
                                            <field name="active" width="100"/>
                                            <field name="sequence" width="100"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>


                        <page string="Core Values" name="values" invisible="1">
                            <group>
                                <field name="core_values" widget="html" 
                                       placeholder="Enter the institution's core values..."
                                       options="{'style-inline': true, 'codeview': false}"/>
                            </group>
                        </page>
                        
                        <page string="Additional Notes" name="notes">
                            <field name="note" widget="html" 
                                   placeholder="Add any additional notes or information..."
                                   options="{'style-inline': true, 'codeview': true, 'collaborative': true}"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_obe_institution_tree" model="ir.ui.view">
        <field name="name">obe.institution.list</field>
        <field name="model">obe.institution</field>
        <field name="arch" type="xml">
            <list string="Institutions" 
                  default_order="name" 
                  sample="1"
                  multi_edit="1">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            icon="fa-check"/>
                </header>
                <field name="name" string="Institution Name" required="1"/>
                <field name="code" string="Code" required="1"/>
                <field name="address" string="Address" optional="show"/>
                <field name="phone" string="Phone" optional="hide"/>
                <field name="email" string="Email" optional="hide"/>
                <field name="website" string="Website" widget="url" optional="hide"/>
                <field name="state" string="Status" 
                       widget="badge" 
                       decoration-success="state == 'confirm'"
                       decoration-info="state == 'draft'"
                       optional="show"/>
                <field name="active" string="Active" 
                       widget="boolean_toggle" 
                       optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_obe_institution_search" model="ir.ui.view">
        <field name="name">obe.institution.search</field>
        <field name="model">obe.institution</field>
        <field name="arch" type="xml">
            <search string="Search Institutions">
                <field name="name" string="Institution" 
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="address"/>
                <field name="email"/>
                
                <separator/>

                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" 
                        domain="[('state', '=', 'confirm')]"/>
                
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Active Status" name="group_active" 
                            context="{'group_by': 'active'}"/>
                </group>
                
             
            </search>
        </field>
    </record>

    <record id="view_obe_institution_kanban" model="ir.ui.view">
        <field name="name">obe.institution.kanban</field>
        <field name="model">obe.institution</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="state"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-10">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="code"/>
                                    </div>
                                </div>
                                <div class="col-2 text-end">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'info', 'confirm': 'success'}}"/>
                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <i class="fa fa-map-marker"/> 
                                <field name="address" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-phone"/> 
                                <field name="phone" class="text-muted" widget="phone"/>
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-envelope"/> 
                                <field name="email" class="text-muted" widget="email"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="action_obe_institution" model="ir.actions.act_window">
        <field name="name">Institutions</field>
        <field name="res_model">obe.institution</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_obe_institution_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Institution
            </p>
            <p>
                Institutions are the foundation of your OBE management system.
                Click the create button to add a new institution.
            </p>
        </field>
    </record>

    <menuitem id="menu_obe_root" 
              name="OBE Management" 
              web_icon="obe_core,static/description/icon.png"
              sequence="10"/>
    
    <menuitem id="menu_obe_configuration" 
              name="Configuration" 
              parent="menu_obe_root"
              sequence="100"/>
    
    <menuitem id="menu_obe_institution" 
              name="Institutions Setup" 
              parent="menu_obe_configuration" 
              action="action_obe_institution"
              sequence="10"/>

</odoo>