<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================ -->
    <!-- MATRIX SELECTOR WEB PAGE -->
    <!-- ============================================ -->

    <template id="clo_plo_matrix_selector_page" name="CLO-PLO Matrix Selector">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <div class="container mt-5 mb-5">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2">
                            <div class="card shadow-lg border-0">
                                <!-- Header -->
                                <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #714B67 0%, #9b7e92 100%);">
                                    <h2 class="mb-0">
                                        <i class="fa fa-table"></i> CLO-PLO Mapping Matrix
                                    </h2>
                                    <p class="mb-0 mt-2" style="opacity: 0.9;">
                                        Visualize Course Learning Outcomes to Program Learning Outcomes relationships
                                    </p>
                                </div>

                                <!-- Form Body -->
                                <div class="card-body p-5">
                                    <form action="/obe/clo_plo_matrix/view" method="get" id="matrix_form">
                                        <!-- Course Selection -->
                                        <div class="form-group mb-4">
                                            <label for="course_id" class="font-weight-bold">
                                                <i class="fa fa-book text-primary"></i> Select Course *
                                            </label>
                                            <select name="course_id" id="course_id" class="form-control form-control-lg" required="required">
                                                <option value="">-- Select a Course --</option>
                                                <t t-foreach="courses" t-as="course">
                                                    <option t-att-value="course.id">
                                                        <t t-esc="course.code"/> - <t t-esc="course.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                            <small class="form-text text-muted">
                                                Choose the course for which you want to view CLO-PLO mappings
                                            </small>
                                        </div>

                                        <!-- Program Selection -->
                                        <div class="form-group mb-4">
                                            <label for="program_id" class="font-weight-bold">
                                                <i class="fa fa-graduation-cap text-success"></i> Select Program *
                                            </label>
                                            <select name="program_id" id="program_id" class="form-control form-control-lg" required="required">
                                                <option value="">-- Select a Program --</option>
                                                <t t-foreach="programs" t-as="program">
                                                    <option t-att-value="program.id">
                                                        <t t-esc="program.code"/> - <t t-esc="program.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                            <small class="form-text text-muted">
                                                Choose the program whose PLOs you want to map against
                                            </small>
                                        </div>

                                        <!-- Course Offering (Optional) -->
                                        <div class="form-group mb-4">
                                            <label for="offering_id" class="font-weight-bold">
                                                <i class="fa fa-calendar text-warning"></i> Course Offering (Optional)
                                            </label>
                                            <select name="offering_id" id="offering_id" class="form-control form-control-lg">
                                                <option value="">-- All Offerings --</option>
                                            </select>
                                            <small class="form-text text-muted">
                                                Filter by specific semester/section (leave blank for all)
                                            </small>
                                        </div>

                                        <!-- Info Box -->
                                        <div class="alert alert-info mt-4" role="alert">
                                            <h5 class="alert-heading">
                                                <i class="fa fa-info-circle"></i> Matrix Features
                                            </h5>
                                            <ul class="mb-0 pl-3">
                                                <li>Interactive color-coded strength indicators</li>
                                                <li>Comprehensive coverage statistics</li>
                                                <li>Print and export capabilities</li>
                                                <li>Gap analysis and recommendations</li>
                                            </ul>
                                        </div>

                                        <!-- Submit Button -->
                                        <div class="text-center mt-4">
                                            <button type="submit" class="btn btn-lg px-5 py-3 text-white" style="background: linear-gradient(135deg, #714B67 0%, #9b7e92 100%);">
                                                <i class="fa fa-chart-bar"></i> Generate Matrix
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <!-- Help Section -->
                            <div class="card mt-4 border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fa fa-question-circle text-info"></i> How to Use
                                    </h5>
                                    <ol class="mb-0">
                                        <li><strong>Select a Course:</strong> Choose the course containing the CLOs</li>
                                        <li><strong>Select a Program:</strong> Choose the program with the PLOs to map</li>
                                        <li><strong>Optional Filtering:</strong> Narrow down by course offering if needed</li>
                                        <li><strong>Generate:</strong> Click the button to view the interactive matrix</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- ============================================ -->
    <!-- WEBSITE MENU ITEM (Optional) -->
    <!-- ============================================ -->

    <record id="menu_clo_plo_matrix_website" model="website.menu">
        <field name="name">CLO-PLO Matrix</field>
        <field name="url">/obe/clo_plo_matrix</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">50</field>
    </record>

</odoo>