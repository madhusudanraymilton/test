<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_obe_clo_form" model="ir.ui.view">
        <field name="name">obe.clo.form</field>
        <field name="model">obe.clo</field>
        <field name="arch" type="xml">
            <form string="Course Learning Outcome">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active" readonly="1"/>
                    <button name="action_active" string="Activate" type="object" 
                            class="oe_highlight" icon="fa-check" 
                            invisible="state != 'draft'" 
                            confirm="Are you sure you want to activate this CLO?"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            class="btn-secondary" icon="fa-undo" 
                            invisible="state != 'active'"
                            confirm="Are you sure you want to reset this CLO to draft?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., CLO-001" 
                                   required="1" class="text-break"/>
                        </h1>
                        <div class="d-flex align-items-center gap-2">
                            <label for="code" class="oe_edit_only"/>
                            <field name="code" placeholder="e.g., CS101-CLO1" 
                                   class="oe_inline"/>
                            <span class="mx-2">|</span>
                            <label for="active" string="Active" class="me-1"/>
                            <field name="active" widget="boolean_toggle" nolabel="1"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="course_id" required="1"/>
                            <field name="offering_id"/>
                            <field name="institution_id"/>
                            <field name="bloom_level" required="1"/>
                            <field name="cognitive_level"/>
                            <field name="target_attainment"/>
                        </group>
                        
                        <group string="Additional Details">
                            <field name="institution_id"/>
                            <field name="website" widget="url" placeholder="https://www.example.com"/>
                            <field name="action_verb" placeholder="e.g., Analyze, Design, Evaluate"/>
                            <field name="plo_count" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="CLO Statement" colspan="2">
                            <field name="statement" 
                                   placeholder="Start with an action verb and keep it measurable..."
                                   widget="text"
                                   nolabel="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_obe_clo_tree" model="ir.ui.view">
        <field name="name">obe.clo.list</field>
        <field name="model">obe.clo</field>
        <field name="arch" type="xml">
            <list string="Course Learning Outcomes"
                  default_order="offering_id, sequence"
                  sample="1"
                  multi_edit="1">
                <header>
                    <button name="action_active" string="Activate" type="object" 
                            icon="fa-check"/>
                </header>
                <field name="sequence" widget="handle"/>
                <field name="name" string="CLO Name" required="1"/>
                <field name="course_id" string="Course"/>
                <field name="bloom_level" string="Bloom Level" optional="show"/>
                <field name="action_verb" string="Action Verb" optional="hide"/>
                <field name="target_attainment" string="Target %" optional="hide"/>
                <field name="plo_count" string="PLO Count" optional="hide"/>
                <field name="state" string="Status" 
                       widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-info="state == 'draft'"
                       optional="show"/>
                <field name="active" string="Active" 
                       widget="boolean_toggle" 
                       optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_obe_clo_search" model="ir.ui.view">
        <field name="name">obe.clo.search</field>
        <field name="model">obe.clo</field>
        <field name="arch" type="xml">
            <search string="Search CLOs">
                <field name="name" string="CLO" 
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="course_id"/>
                <field name="bloom_level"/>
                
                <separator/>

                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Active Status" name="active_state" 
                        domain="[('state', '=', 'active')]"/>
                
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Course" name="group_course" 
                            context="{'group_by': 'course_id'}"/>
                    <filter string="Bloom Level" name="group_bloom" 
                            context="{'group_by': 'bloom_level'}"/>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Active Status" name="group_active" 
                            context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_obe_clo_kanban" model="ir.ui.view">
        <field name="name">obe.clo.kanban</field>
        <field name="model">obe.clo</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="course_id"/>
                <field name="bloom_level"/>
                <field name="state"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-10">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="code"/>
                                    </div>
                                </div>
                                <div class="col-2 text-end">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'info', 'active': 'success'}}"/>
                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <i class="fa fa-book"/> 
                                <field name="course_id" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-layer-group"/> 
                                <field name="bloom_level" class="text-muted"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_obe_clo" model="ir.actions.act_window">
        <field name="name">Course Learning Outcomes</field>
        <field name="res_model">obe.clo</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_obe_clo_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Course Learning Outcome
            </p>
            <p>
                CLOs define what students should achieve in a course.
                Click the create button to add a new CLO.
            </p>
        </field>
    </record>

    <menuitem id="menu_obe_clo"
              name="Course Learning Outcomes"
              parent="menu_obe_root"
              action="action_obe_clo"
              sequence="30"/>

</odoo>