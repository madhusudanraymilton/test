<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_obe_plo_form" model="ir.ui.view">
        <field name="name">obe.plo.form</field>
        <field name="model">obe.plo</field>
        <field name="arch" type="xml">
            <form string="Program Learning Outcome">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active" readonly="1"/>
                    <button name="action_active" string="Activate" type="object" 
                            class="oe_highlight" icon="fa-check" 
                            invisible="state != 'draft'" 
                            confirm="Are you sure you want to activate this PLO?"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            class="btn-secondary" icon="fa-undo" 
                            invisible="state != 'active'"
                            confirm="Are you sure you want to reset this PLO to draft?"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_peos"
                                string="PEOs"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-sitemap">
                            <field name="peo_count" widget="statinfo" string="PEOs"/>
                        </button>
                        <button name="action_view_clos"
                                string="CLOs"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-link">
                            <field name="clo_count" widget="statinfo" string="CLOs"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., PLO-001" 
                                   required="1" class="text-break"/>
                        </h1>
                        <div class="d-flex align-items-center gap-2">
                            <label for="code" class="oe_edit_only"/>
                            <field name="code" placeholder="e.g., CS-PLO1" 
                                   class="oe_inline" readonly="state != 'draft'"/>
                            <span class="mx-2">|</span>
                            <label for="active" string="Active" class="me-1"/>
                            <field name="active" widget="boolean_toggle" nolabel="1" readonly="state != 'draft'"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="program_id" required="1" readonly="state != 'draft'"/>
                            <field name="institution_id" readonly="state != 'draft'"/>
                            <field name="bloom_level" required="1" placeholder="Select Bloom Level" readonly="state != 'draft'"/>
                            <field name="cognitive_level" placeholder="Select Cognitive Level" readonly="state != 'draft'"/>
                        </group>
                        
                        <group string="Additional Details">
                            <field name="accreditation_mapping" placeholder="Select Accreditation Mapping" readonly="state != 'draft'"/>
                            <field name="website" widget="url" placeholder="https://www.example.com" readonly="state != 'draft'"/>
                            <field name="target_attainment" readonly="state != 'draft'"/>
                           
                        </group>
            
                    </group>

                    <notebook>
                       <page string="Description">
                           <field name="description"/>
                       </page>
                    </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_obe_plo_list" model="ir.ui.view">
        <field name="name">obe.plo.list</field>
        <field name="model">obe.plo</field>
        <field name="arch" type="xml">
            <list string="Program Learning Outcomes"
                  default_order="program_id, sequence"
                  sample="1"
                  multi_edit="1">
                <header>
                    <button name="action_active" string="Activate" type="object" 
                            icon="fa-check"/>
                </header>
                <field name="sequence" widget="handle"/>
                <field name="name" string="PLO Name" required="1"/>
                <field name="program_id" string="Program"/>
                <field name="bloom_level" string="Bloom Level" optional="show"/>
                <field name="peo_count" string="PEOs" widget="statinfo" optional="hide"/>
                <field name="clo_count" string="CLOs" widget="statinfo" optional="hide"/>
                <field name="target_attainment" string="Target %" optional="hide"/>
                <field name="state" string="Status" 
                       widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-info="state == 'draft'"
                       optional="show"/>
                <field name="active" string="Active" 
                       widget="boolean_toggle" 
                       optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_obe_plo_search" model="ir.ui.view">
        <field name="name">obe.plo.search</field>
        <field name="model">obe.plo</field>
        <field name="arch" type="xml">
            <search string="Search PLOs">
                <field name="name" string="PLO" 
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="institution_id"/>
                <field name="bloom_level"/>
                
                <separator/>

                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Active Status" name="active_state" 
                        domain="[('state', '=', 'active')]"/>
                
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Program" name="group_program" 
                            context="{'group_by': 'program_id'}"/>
                    <filter string="Institution" name="group_institution" 
                            context="{'group_by': 'institution_id'}"/>
                    <filter string="Bloom Level" name="group_bloom" 
                            context="{'group_by': 'bloom_level'}"/>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Active Status" name="group_active" 
                            context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_obe_plo_kanban" model="ir.ui.view">
        <field name="name">obe.plo.kanban</field>
        <field name="model">obe.plo</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="bloom_level"/>
                <field name="peo_count"/>
                <field name="clo_count"/>
                <field name="state"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-10">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="code"/>
                                    </div>
                                </div>
                                <div class="col-2 text-end">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'info', 'active': 'success'}}"/>
                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <i class="fa fa-graduation-cap"/> 
                                <field name="program_id" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-layer-group"/> 
                                <field name="bloom_level" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-sitemap"/> 
                                <span class="text-muted"><field name="peo_count"/> PEOs | <field name="clo_count"/> CLOs</span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_obe_plo" model="ir.actions.act_window">
        <field name="name">Program Learning Outcomes</field>
        <field name="res_model">obe.plo</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_obe_plo_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Program Learning Outcome
            </p>
            <p>
                PLOs describe what students are expected to know and be able to do by the time of graduation.
                Click the create button to add a new PLO.
            </p>
        </field>
    </record>

    <menuitem id="menu_obe_plo"
              name="PLOs"
              parent="menu_obe_outcome"
              action="action_obe_plo"
              sequence="2"/>

</odoo>