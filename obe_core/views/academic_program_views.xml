<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_obe_academic_program_tree" model="ir.ui.view">
        <field name="name">obe.academic.program.list</field>
        <field name="model">obe.academic.program</field>
        <field name="arch" type="xml">
            <list string="Academic Programs" 
                  default_order="code"
                  sample="1"
                  multi_edit="1">
                <header>
                    <button name="action_activate" string="Activate" type="object" icon="fa-check"/>
                </header>

                <field name="name" string="Program Name" required="1"/>
                <field name="code" string="Code" required="1"/>
                <field name="institution_id" string="Institution" optional="show"/>
                <field name="degree_level" string="Degree Level" optional="show"/>
                <field name="duration_years" string="Duration (Years)" optional="hide"/>
                <field name="total_credits" string="Total Credits" optional="hide"/>
                <field name="coordinator_id" string="Coordinator" optional="hide"/>
                <field name="state" string="Status" widget="badge" decoration-success="state == 'active'" decoration-info="state == 'draft'" decoration-muted="state == 'inactive'" optional="show"/>
                <field name="active" string="Active"  widget="boolean_toggle"  optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_obe_academic_program_form" model="ir.ui.view">
        <field name="name">obe.academic.program.form</field>
        <field name="model">obe.academic.program</field>
        <field name="arch" type="xml">
            <form string="Academic Program">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,inactive" readonly="1"/>
                    <button name="action_activate" string="Activate" type="object"  class="oe_highlight" icon="fa-check"  invisible="state != 'draft'"  confirm="Are you sure you want to activate this program?"/>
                    <button name="action_archive" string="Archive" type="object" 
                            class="btn-secondary" icon="fa-archive" 
                            invisible="state != 'active'"
                            confirm="Are you sure you want to archive this program?"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            class="btn-secondary" icon="fa-undo" 
                            invisible="state == 'draft'"
                            confirm="Are you sure you want to reset this program to draft?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="code" class="oe_edit_only"/>
                        <h1>
                            <field name="code" placeholder="e.g., CS-BS" 
                                   required="1" class="text-break"
                                   readonly="state == 'active'"/>
                        </h1>
                        <label for="name" class="oe_edit_only"/>
                        <h2>
                            <field name="name" placeholder="e.g., Bachelor of Science in Computer Science" 
                                   required="1" class="text-break"
                                   readonly="state == 'active'"/>
                        </h2>
                        <div class="d-flex align-items-center gap-2 mt-2">
                            <label for="active" string="Active" class="me-1"/>
                            <field name="active" widget="boolean_toggle" nolabel="1"
                                   readonly="state == 'active'"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="institution_id" required="1" 
                                   readonly="state == 'active'"
                                   placeholder="Select Institution"/>
                            <field name="institution_code" readonly="state == 'active'"/>
                            <field name="degree_level" 
                                   placeholder="Select Degree Level" 
                                   readonly="state == 'active'"/>
                            <field name="coordinator_id" 
                                   readonly="state == 'active'"
                                   placeholder="Select Coordinator"/>
                            <field name="accreditation_body" 
                                   placeholder="Select Accreditation Body" 
                                   readonly="state == 'active'"/>
                        </group>
                        
                        <group string="Program Details">
                            <field name="duration_years" readonly="state == 'active'"/>
                            <field name="total_credits" readonly="state == 'active'"/>
                            <field name="start_date" readonly="state == 'active'"/>
                            <field name="end_date" readonly="state == 'active'"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description &amp; Objectives" name="description">
                            <group>
                                <field name="description"   widget="html"  colspan="2"
                                       placeholder="Enter program description..."
                                       options="{'style-inline': true, 'codeview': false}"/>
                            </group>
                            <group>
                                <field name="objectives" 
                                       widget="html"
                                       colspan="2"
                                       placeholder="Enter program objectives..."
                                       options="{'style-inline': true, 'codeview': false}"/>
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_obe_academic_program_search" model="ir.ui.view">
        <field name="name">obe.academic.program.search</field>
        <field name="model">obe.academic.program</field>
        <field name="arch" type="xml">
            <search string="Search Academic Programs">
                <field name="name" string="Program" 
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="institution_id"/>
                <field name="degree_level"/>
                <field name="coordinator_id"/>
                
                <separator/>

                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Active Programs" name="active_state" 
                        domain="[('state', '=', 'active')]"/>
                <filter string="Inactive Programs" name="inactive_state" 
                        domain="[('state', '=', 'inactive')]"/>
                
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Institution" name="group_institution" 
                            context="{'group_by': 'institution_id'}"/>
                    <filter string="Degree Level" name="group_degree" 
                            context="{'group_by': 'degree_level'}"/>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Coordinator" name="group_coordinator" 
                            context="{'group_by': 'coordinator_id'}"/>
                    <filter string="Active Status" name="group_active" 
                            context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_obe_academic_program_kanban" model="ir.ui.view">
        <field name="name">obe.academic.program.kanban</field>
        <field name="model">obe.academic.program</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="institution_id"/>
                <field name="degree_level"/>
                <field name="duration_years"/>
                <field name="total_credits"/>
                <field name="coordinator_id"/>
                <field name="state"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-10">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="code"/>
                                    </div>
                                </div>
                                <div class="col-2 text-end">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'info', 'active': 'success', 'inactive': 'secondary'}}"/>
                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <i class="fa fa-university"/> 
                                <field name="institution_id" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1">
                                <i class="fa fa-graduation-cap"/> 
                                <field name="degree_level" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1" t-if="record.coordinator_id.raw_value">
                                <i class="fa fa-user"/> 
                                <field name="coordinator_id" class="text-muted"/>
                            </div>
                            
                            <div class="mt-1">
                                <span class="badge text-bg-info">
                                    <i class="fa fa-clock-o"/> 
                                    <field name="duration_years"/> years
                                </span>
                                <span class="badge text-bg-primary ms-1">
                                    <i class="fa fa-certificate"/> 
                                    <field name="total_credits"/> credits
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_obe_academic_program" model="ir.actions.act_window">
        <field name="name">Academic Programs</field>
        <field name="res_model">obe.academic.program</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_obe_academic_program_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Academic Program
            </p>
            <p>
                Academic Programs are the core of your OBE management system.
                Define programs with their PEOs and PLOs to track educational outcomes.
            </p>
        </field>
    </record>

    <menuitem id="menu_obe_academic_program" 
              name="Academic Programs" 
              parent="menu_obe_configuration" 
              action="action_obe_academic_program" 
              sequence="20"/>
</odoo>