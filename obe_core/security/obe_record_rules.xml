<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Faculty can only see/edit offerings they are assigned to -->
        <record id="rule_course_offering_faculty" model="ir.rule">
            <field name="name">Faculty: Own Course Offerings</field>
            <field name="model_id" ref="model_obe_course_offering"/>
            <field name="domain_force">[
                '|',
                ('instructor_id', '=', user.id),
                ('co_instructor_ids', 'in', [user.id])
            ]</field>
            <field name="groups" eval="[(4, ref('group_obe_faculty'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Faculty can only edit CLOs from their offerings -->
        <record id="rule_clo_faculty" model="ir.rule">
            <field name="name">Faculty: Own Course CLOs</field>
            <field name="model_id" ref="model_obe_clo"/>
            <field name="domain_force">[
                '|',
                ('offering_id.instructor_id', '=', user.id),
                ('offering_id.co_instructor_ids', 'in', [user.id])
            ]</field>
            <field name="groups" eval="[(4, ref('group_obe_faculty'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Coordinators can see all data for their programs -->
        <record id="rule_peo_coordinator" model="ir.rule">
            <field name="name">Coordinator: Program PEOs</field>
            <field name="model_id" ref="model_obe_peo"/>
            <field name="domain_force">[('program_id.coordinator_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_obe_coordinator'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_plo_coordinator" model="ir.rule">
            <field name="name">Coordinator: Program PLOs</field>
            <field name="model_id" ref="model_obe_plo"/>
            <field name="domain_force">[('program_id.coordinator_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_obe_coordinator'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Admins see everything -->
        <record id="rule_all_admin" model="ir.rule">
            <field name="name">Admin: Full Access</field>
            <field name="model_id" ref="model_obe_institution"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_obe_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Students see only published data -->
        <record id="rule_plo_student" model="ir.rule">
            <field name="name">Student: Published PLOs</field>
            <field name="model_id" ref="model_obe_plo"/>
            <field name="domain_force">[('state', '=', 'published')]</field>
            <field name="groups" eval="[(4, ref('group_obe_student'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_peo_student" model="ir.rule">
            <field name="name">Student: Published PEOs</field>
            <field name="model_id" ref="model_obe_peo"/>
            <field name="domain_force">[('state', '=', 'published')]</field>
            <field name="groups" eval="[(4, ref('group_obe_student'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>