<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_library_fine_tree" model="ir.ui.view">
        <field name="name">library.fine.tree</field>
        <field name="model">library.fine</field>
        <field name="arch" type="xml">
            <list string="Fines" decoration-danger="payment_status == 'unpaid'" decoration-success="payment_status == 'paid'">
                <field name="name"/>
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="borrowing_id"/>
                <field name="fine_amount" widget="monetary" sum="Total"/>
                <field name="fine_reason"/>
                <field name="created_date"/>
                <field name="payment_date"/>
                <field name="payment_status" widget="badge" decoration-success="payment_status == 'paid'" decoration-danger="payment_status == 'unpaid'"/>
            </list>
        </field>
    </record>

    <record id="view_library_fine_form" model="ir.ui.view">
        <field name="name">library.fine.form</field>
        <field name="model">library.fine</field>
        <field name="arch" type="xml">
            <form string="Fine">
                <header>
                    <button name="action_mark_as_paid" string="Mark as Paid" type="object" class="btn-primary" invisible="payment_status == 'paid'"/>
                    <button name="action_send_payment_reminder" string="Send Payment Reminder" type="object" invisible="payment_status == 'paid'"/>
                    <field name="payment_status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="member_id" readonly="1"/>
                            <field name="borrowing_id" readonly="1"/>
                            <field name="book_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="fine_amount" widget="monetary" readonly="1"/>
                            <field name="created_date" readonly="1"/>
                            <field name="payment_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="fine_reason" readonly="1"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Add payment notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
