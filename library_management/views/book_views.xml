<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kanban View -->
    <record id="view_library_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban string="Books">
                <field name="id"/>
                <field name="title"/>
                <field name="cover_image"/>
                <field name="state"/>
                <field name="available_copies"/>
                <field name="total_copies"/>
                <field name="price"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('library.book', 'cover_image', record.id.raw_value)" alt="Book Cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="title"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="author_ids" widget="many2many_tags"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="isbn"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge" t-att-class="record.state.raw_value == 'available' ? 'badge-success' : record.state.raw_value == 'borrowed' ? 'badge-warning' : 'badge-secondary'">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        Available: <field name="available_copies"/> / <field name="total_copies"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="price" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Books">
                <field name="title"/>
                <field name="isbn"/>
                <field name="author_ids" widget="many2many_tags"/>
                <field name="publisher_id"/>
                <field name="category_ids" widget="many2many_tags"/>
                <field name="total_copies"/>
                <field name="available_copies"/>
                <field name="price" widget="monetary"/>
                <field name="state" widget="badge" decoration-success="state == 'available'" decoration-warning="state == 'borrowed'" decoration-info="state == 'maintenance'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="available,borrowed,maintenance"/>
                    <button name="action_set_available" string="Set Available" type="object" class="btn-primary" invisible="state == 'available'"/>
                    <button name="action_set_maintenance" string="Set Maintenance" type="object" invisible="state == 'maintenance'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_borrowings" type="object"
                                class="oe_stat_button" icon="fa-exchange"
                                invisible="total_borrowed_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="active_borrowing_count"/>/<field name="total_borrowed_count"/>
                                </span>
                                <span class="o_stat_text">Borrowings</span>
                            </div>
                        </button>
                    </div>
                    <field name="cover_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="title" class="oe_edit_only"/>
                        <h1>
                            <field name="title" placeholder="Book Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="isbn"/>
                            <field name="author_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': False}"/>
                            <field name="publisher_id"/>
                            <field name="category_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="publication_date"/>
                            <field name="price" widget="monetary"/>
                            <field name="total_copies"/>
                            <field name="available_copies"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Write a description..."/>
                        </page>
                        <page string="QR Code" invisible="not isbn">
                            <group>
                                <field name="qr_code" widget="image" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

