    <!-- Action -->

        <!-- Modern Kanban View -->
    <record id="view_library_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" string="Books">
                <!-- Fields used in kanban -->
                <field name="title"/>
                <field name="cover_image"/>
                <field name="state"/>
                <field name="available_copies"/>
                <field name="total_copies"/>
                <field name="price"/>
                <field name="isbn"/>
                <field name="author_ids"/>

                <templates>
                    <t t-name="card">
                        <div class="o_kanban_record o_kanban_global_click">

                            <!-- Book Cover -->
                            <div class="o_kanban_image">
                                <img
                                    t-if="record.cover_image.raw_value"
                                    t-att-src="'/web/image/library.book/' + record.id.raw_value + '/cover_image'"
                                    alt="Book Cover"
                                />
                                <div t-else="" class="o_kanban_image_placeholder">
                                    <span class="fa fa-book fa-2x text-muted"/>
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="o_kanban_details">

                                <!-- Title -->
                                <strong class="o_kanban_record_title">
                                    <field name="title"/>
                                </strong>

                                <!-- Authors -->
                                <div class="o_kanban_subtitle mt-1">
                                    <field name="author_ids" widget="many2many_tags"/>
                                </div>

                                <!-- ISBN -->
                                <div class="text-muted small mt-1">
                                    ISBN: <field name="isbn"/>
                                </div>

                                <!-- Status + Price -->
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span
                                        class="badge"
                                        t-att-class="
                                            record.state.raw_value == 'available'
                                            ? 'badge-success'
                                            : record.state.raw_value == 'borrowed'
                                            ? 'badge-warning'
                                            : 'badge-secondary'
                                        ">
                                        <field name="state"/>
                                    </span>

                                    <span class="fw-bold">
                                        <field name="price" widget="monetary"/>
                                    </span>
                                </div>

                                <!-- Availability -->
                                <div class="text-muted small mt-2">
                                    Available:
                                    <strong>
                                        <field name="available_copies"/>
                                    </strong>
                                    /
                                    <field name="total_copies"/>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


</odoo>