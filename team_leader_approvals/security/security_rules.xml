<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record rule for team leaders to see only their team's leave requests -->
        <record id="hr_leave_team_leader_rule" model="ir.rule">
            <field name="name">Team Leader: Only see team member leave requests</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                ['|',
                 '&amp;', ('employee_id.team_leader_id.user_id', '=', user.id),
                          ('employee_id.team_leader_id.is_team_leader', '=', True),
                 ('employee_id.user_id', '=', user.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <!-- Record rule to prevent parent TL from seeing child TL's team members -->
        <record id="hr_leave_no_parent_tl_access_rule" model="ir.rule">
            <field name="name">Team Leader: No access to child TL team members</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                ['|',
                 '&amp;', ('employee_id.is_team_leader', '=', False),
                         ('employee_id.team_leader_id.user_id', '=', user.id),
                 ('employee_id.user_id', '=', user.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <!-- Record rule for team leaders to see only their team members -->
        <record id="hr_employee_team_leader_rule" model="ir.rule">
            <field name="name">Team Leader: Only see team members</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                ['|',
                 ('team_leader_id.user_id', '=', user.id),
                 ('user_id', '=', user.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>
    </data>
</odoo>