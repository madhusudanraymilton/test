    <!-- Add Library Search Filters -->
    <record id="view_student_student_search_library" model="ir.ui.view">
        <field name="name">student.student.search.library</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="wk_school_management.student_student_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="Has Library Card"
                        name="has_library_card"
                        domain="[('library_card_id', '!=', False)]"/>
                <filter string="No Library Card"
                        name="no_library_card"
                        domain="[('library_card_id', '=', False)]"/>
                <filter string="Has Books Issued"
                        name="has_books"
                        domain="[('outstanding_books_count', '>', 0)]"/>
                <filter string="Has Overdue Books"
                        name="has_overdue"
                        domain="[('overdue_books_count', '>', 0)]"/>
                <filter string="Blocked Status"
                        name="blocked"
                        domain="[('library_status', '=', 'blocked')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Library Status"
                            name="group_library_status"
                            context="{'group_by': 'library_status'}"/>
                    <filter string="Has Library Card"
                            name="group_has_card"
                            context="{'group_by': 'library_card_id'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Extend Library Card Form View to support WK Students -->
    <record id="view_op_library_card_form_wk_student" model="ir.ui.view">
        <field name="name">op.library.card.form.wk.student</field>
        <field name="model">op.library.card</field>
        <field name="inherit_id" ref="openeducat_library.view_op_library_card_form"/>
        <field name="arch" type="xml">
            <field name="student_id" position="after">
                <field name="wk_student_id" 
                       options="{'no_create': True, 'no_open': True}"
                       invisible="type != 'student'" 
                       required="type == 'student' and student_id == False"/>
            </field>
        </field>
    </record>

    <!-- Extend Media Movement Form View -->
    <record id="view_op_media_movement_form_wk_student" model="ir.ui.view">
        <field name="name">op.media.movement.form.wk.student</field>
        <field name="model">op.media.movement</field>
        <field name="inherit_id" ref="openeducat_library.view_op_media_movement_form"/>
        <field name="arch" type="xml">
            <field name="student_id" position="after">
                <field name="wk_student_id" 
                       readonly="1" 
                       force_save="1"
                       invisible="type != 'student'"/>
            </field>
        </field>
    </record>

