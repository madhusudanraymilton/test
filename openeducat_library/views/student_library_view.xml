<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Inherit WK School Student Form View -->
    <record id="view_student_student_form_library" model="ir.ui.view">
        <field name="name">student.student.form.library</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="wk_school_management.wk_school_student_view_form"/>
        <field name="arch" type="xml">
            
            <!-- Add Smart Buttons in Button Box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                
                <!-- Library Card Button -->
                <button name="action_view_library_card"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-id-card"
                        invisible="library_card_id == False">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Library</span>
                        <span class="o_stat_text">Card</span>
                    </div>
                </button>
                
                <!-- Create Library Card Button -->
                <button name="action_create_library_card"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-plus-square"
                        invisible="library_card_id != False"
                        help="Create library card for this student">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Create</span>
                        <span class="o_stat_text">Library Card</span>
                    </div>
                </button>

                <!-- Books Count Button -->
                <button name="action_view_book_movements"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-book">
                    <field name="media_movement_count" widget="statinfo" string="Books"/>
                </button>

                <!-- Outstanding Books Button -->
                <button name="action_view_book_movements"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-bookmark"
                        invisible="outstanding_books_count == 0"
                        context="{'search_default_state_issue': 1}">
                    <field name="outstanding_books_count" widget="statinfo" string="Issued"/>
                </button>

                <!-- Overdue Books Button (Red Alert) -->
                <button name="action_view_book_movements"
                        type="object"
                        class="oe_stat_button bg-danger text-white"
                        icon="fa-exclamation-triangle"
                        invisible="overdue_books_count == 0"
                        context="{'search_default_overdue': 1}">
                    <field name="overdue_books_count" widget="statinfo" string="Overdue"/>
                </button>

                <!-- Issue Book Quick Action -->
                <button name="action_issue_book"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-hand-o-right"
                        invisible="library_card_id == False"
                        string="Issue Book"
                        help="Quickly issue a book to this student"/>

            </xpath>

            <!-- Add Library Tab in Notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Library" name="library_info" invisible="library_card_id == False">
                    
                    <group>
                        <group string="Library Card Information">
                            <field name="library_card_id" readonly="1"/>
                            <field name="library_status"
                                   widget="badge"
                                   decoration-success="library_status == 'good'"
                                   decoration-warning="library_status == 'warning'"
                                   decoration-danger="library_status == 'blocked'"/>
                        </group>
                        <group string="Book Statistics">
                            <field name="outstanding_books_count"/>
                            <field name="overdue_books_count"/>
                            <field name="total_penalty_amount" widget="monetary"/>
                        </group>
                    </group>

                    <group string="Current & Recent Book Movements">
                        <field name="media_movement_ids" nolabel="1">
                            <tree decoration-danger="is_overdue == True" decoration-success="state == 'return_done'">
                                <field name="name"/>
                                <field name="media_id"/>
                                <field name="issued_date"/>
                                <field name="return_date"/>
                                <field name="actual_return_date" optional="hide"/>
                                <field name="days_overdue"/>
                                <field name="state"
                                       widget="badge"
                                       decoration-info="state == 'issue'"
                                       decoration-warning="state == 'reissue'"
                                       decoration-success="state in ('return', 'return_done')"
                                       decoration-danger="state == 'lost'"/>
                                <field name="penalty" widget="monetary" optional="hide"/>
                                <field name="is_overdue" column_invisible="1"/>
                                <button name="action_return_book"
                                        type="object"
                                        string="Return"
                                        icon="fa-check"
                                        invisible="state != 'issue'"/>
                            </tree>
                        </field>
                    </group>

                </page>
            </xpath>

        </field>
    </record>

    <!-- Add Library Fields to Student Tree View -->
    <record id="view_student_student_tree_library" model="ir.ui.view">
        <field name="name">student.student.tree.library</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="wk_school_management.wk_school_student_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="after">
                <field name="library_card_id" optional="hide"/>
                <field name="outstanding_books_count" optional="hide" string="Books Out"/>
                <field name="library_status"
                       widget="badge"
                       decoration-success="library_status == 'good'"
                       decoration-warning="library_status == 'warning'"
                       decoration-danger="library_status == 'blocked'"
                       optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Add Library Search Filters -->
    <record id="view_student_student_search_library" model="ir.ui.view">
        <field name="name">student.student.search.library</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="wk_school_management.student_student_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="Has Library Card"
                        name="has_library_card"
                        domain="[('library_card_id', '!=', False)]"/>
                <filter string="No Library Card"
                        name="no_library_card"
                        domain="[('library_card_id', '=', False)]"/>
                <filter string="Has Books Issued"
                        name="has_books"
                        domain="[('outstanding_books_count', '>', 0)]"/>
                <filter string="Has Overdue Books"
                        name="has_overdue"
                        domain="[('overdue_books_count', '>', 0)]"/>
                <filter string="Blocked Status"
                        name="blocked"
                        domain="[('library_status', '=', 'blocked')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Library Status"
                            name="group_library_status"
                            context="{'group_by': 'library_status'}"/>
                    <filter string="Has Library Card"
                            name="group_has_card"
                            context="{'group_by': 'library_card_id'}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>