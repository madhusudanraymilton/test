<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <record id="inherited_model_view_move_form" model="ir.ui.view">
            <field name="name">inherited.view.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- find field description and add the field
                    new_field after it -->
                <xpath expr="//group[@id='header_left_group']/div" position="after">
                    <field name="profile_id"/>
                    <field name="allowed_account_ids" widget="many2many_tags" invisible='1'/>
                </xpath>

                <!-- Apply domain to account_id in line_ids (Journal Items tab) -->
                <xpath expr="//field[@name='line_ids']//field[@name='account_id']" position="attributes">
                    <attribute name="domain">
                        [
                            '|',
                            ('id', 'in', parent.allowed_account_ids),
                            ('id', '=', False)
                        ]
                    </attribute>
                    <attribute name="options">{'no_create': True, 'no_create_edit': True, 'no_open': True}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
