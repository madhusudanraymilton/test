<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_account_payment_register_form_inherit_profile" model="ir.ui.view">
            <field name="name">account.payment.register.form.inherit.profile</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">

                <!-- Add profile_id field -->
                <xpath expr="//field[@name='journal_id']" position="before">
                    <field name="profile_id" readonly="1" invisible="1"/>
                </xpath>

                <!-- Make journal readonly -->
                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>